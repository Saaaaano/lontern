doctype html 
html(lang="ja")
    head 
        meta(charset="utf-8")
        meta(name="robots" content="noindex,nofollow")
        title lontern 
        link(rel="stylesheet" href="/css/stylesheet.css")
        link(rel="icon" href="/images/favicon.png")
        link(rel="apple-touch-icon" href="/images/favicon.png")
    body 
        div(class="sessionCreateMain")
            div(class="header") 
                div(class="pagetitle") 新規セッション作成
                div(class="topbtn")
                    a(href="/index") 
                        img(src="/images/lontern_logo_w.png" width="100px")
            form(action="/createSession" method="post")
                div(class="inputarea")
                    label(for="sessionName" class="inputlabel")
                        a セッション名
                    input(name="sessionName" id="sessionName" type="text" required)
                    br
                    label(for="systemName" class="inputlabel")
                        a システム
                    input(name="systemName" id="systemName" type="text" required)
                    br
                    label(for="personNum" class="inputlabel")
                        a 参加人数
                    input(name="personNum" id="personNum" type="number" required)
                    a 人
                    br
                    label(for="password" class="inputlabel")
                        a パスワード
                    input(name="password" id="password" type="text")
                    br
                    small 　※ 未入力でパスワードなしとなります。
                    br
                    label(class="inputlabel")
                        a 観戦
                    input(name="audience" id="audience_t" type="radio" value="1" checked="checked")
                    label(for="audience_t")
                        a(class="radiolabel") 許可
                    input(name="audience" id="audience_f" type="radio" value="0")
                    label(for="audience_f") 
                        a(class="radiolabel") 不可
                    br
                    label(class="inputlabel")
                        a 匿名発言
                    input(name="anonymous" id="anonymous_t" type="radio" value="1" checked="checked")
                    label(for="anonymous_t")
                        a(class="radiolabel") 許可
                    input(name="anonymous" id="anonymous_f" type="radio" value="0")
                    label(for="anonymous_f") 
                        a(class="radiolabel") 不可
                    br
                    label(class="inputlabel")
                        a 秘話発言
                    input(name="secret" id="secret_t" type="radio" value="1" checked="checked")
                    label(for="secret_t")
                        a(class="radiolabel") 許可
                    input(name="secret" id="secret_f" type="radio" value="0")
                    label(for="secret_f") 
                        a(class="radiolabel") 不可
                br
                div(class="overviwew")
                    label(for="sessionOverView" class="textarealabel")
                        a セッション概要
                    br
                    textarea(name="sessionOverView", id="sessionOverView" cols="100", rows="30") 
                div(class="center")
                    input(class="applybtn" type="submit" value="作成する")

